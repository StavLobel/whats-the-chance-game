{
  "name": "whats-the-chance-game",
  "private": true,
  "version": "0.1.0",
  "description": "A real-time social game where users challenge each other with entertaining tasks based on number matching",
  "keywords": [
    "game",
    "social",
    "challenges",
    "real-time",
    "firebase",
    "react",
    "fastapi"
  ],
  "author": "Stav Lobel",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/StavLobel/whats-the-chance-game.git"
  },
  "bugs": {
    "url": "https://github.com/StavLobel/whats-the-chance-game/issues"
  },
  "homepage": "https://github.com/StavLobel/whats-the-chance-game#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "release:patch": "npm run version:patch && git push --follow-tags",
    "release:minor": "npm run version:minor && git push --follow-tags",
    "release:major": "npm run version:major && git push --follow-tags"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "@tanstack/react-query": "^4.29.5",
    "firebase": "^10.7.1",
    "lucide-react": "^0.263.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^1.14.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "globals": "^13.20.0",
    "postcss": "^8.4.27",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/user-event": "^14.4.3",
    "jsdom": "^22.1.0",
    "playwright": "^1.37.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "conventional-changelog-cli": "^4.1.0",
    "semantic-release": "^21.1.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "overrides": {
    "nanoid": "^3.3.8",
    "undici": "^6.21.2",
    "brace-expansion": "^1.1.11",
    "micromatch": "^4.0.8"
  }
}
